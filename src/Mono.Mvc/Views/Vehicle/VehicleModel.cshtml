@using Mono.Contracts.Models
@model UpdateVehicleModelVM


<div>
  <form method="post" asp-controller="Vehicle" asp-action="UpdateVehicleModel" asp-route-referer="@ViewBag.Referer">
    <div class="flex-se">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      
      <input type="hidden" asp-for="ModelId" value="@Model.ModelId"/>
      <div class="form-group" style="width: 45%;">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" type="text" value="@Model.Name"/>
        <span asp-validation-for="Name" class="text-danger"></span>
      </div>
      <div class="form-group" style="width: 45%;">
        <label asp-for="ManufacturerId" class="control-label"></label>
        <select asp-for="ManufacturerId" class="form-select form-select-xs mb-3" style="width:84%">
                <option>Select manufacturer</option>
                @foreach(var item in Model.ManufacturersList){
                  <option value="@item.ManufacturerId" selected="@(item.ManufacturerId == Model.ManufacturerId ? true : false)">@item.ManufacturerName</option>
                }
            </select>
        <span asp-validation-for="ManufacturerId" class="text-danger"></span>
      </div>
    </div>
    <div class="modal-footer" style="padding: 0.2rem;">
      <button type="button" ty class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      <button type="submit" class="btn btn-primary">Save changes</button>
    </div>
  </form>
</div>