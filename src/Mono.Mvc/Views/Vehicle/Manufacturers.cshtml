@using Mono.Contracts.Models;
@model IEnumerable<ManufacturersVM>

<div style="margin-top: 8vh;">
    <div style="display: flex; justify-content:space-evenly; align-items:center">
        <div>
            <div class="card">
                <div class="card-header"><b>New Manufacturer</b></div>
                <div class="card-body">
                    <form style="display: flex;" method="post" action="/vehicle/manufacturers">
                        <input name="name" type="text" class="form-control" style="margin-right: 1em" placeholder="Name" aria-label="Name"/>
                        <button type="submit" class="btn btn-primary"><i class="fa-solid fa-plus"></i></button>
                    </form>
                </div>
            </div>
        </div>
        @if (@Model == null){
            <p>No manufacturers found</p>
        }else{
            <table class="table" style="width:50%;">
                <thead>
                    <tr>
                        <th style="width: 40%;margin: 0; padding: 0;">Manufacturer <a class="btn"><i class="fa-solid fa-arrow-up fa-xs"></i></a></th>
                        <th style="width: 40%;margin: 0; padding: 0;">Model count <a class="btn"><i class="fa-solid fa-arrow-up fa-xs"></i></a></th>
                        <th style="width: 20%;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (ManufacturersVM manufacturer in Model)
                    {
                            <tr>
                                <td>
                                    @Html.DisplayFor(item => manufacturer.ManufacturerName)
                                </td>
                                <td>
                                    @Html.DisplayFor(item => manufacturer.Count)
                                </td>
                                <td>
                                    <button class="btn btn-primary"><i class="fa-solid fa-gear" style="color: #ffffff;"></i></button>
                                    <form asp-controller="Vehicle" asp-action="Manufacturers" asp-route-id="@manufacturer.VehicleMakeId" method="delete">
                                        <button type="submit" class="btn btn-danger"><i class="fa-regular fa-trash-can"></i></button>
                                    </form>
                                </td>
                            </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>