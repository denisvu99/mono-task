@using Mono.Contracts.Models
@model CreateVehicleModelVM


<div class="modal fade" id="createVehicleModelModal" tabindex="-1" 
    aria-labelledby="createVehicleModelModal" aria-hidden="true"
    style="margin-top: 20vh;"
>
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="createVehicleModelModal">Create Vehicle Model</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form method="post" asp-controller="Vehicle" asp-action="CreateVehicleModel">
          <div class="flex-se">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="width: 45%;">
              <label asp-for="Name" class="control-label"></label>
              <input asp-for="Name" class="form-control" type="text"/>
              <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group" style="width: 45%;">
              <label asp-for="ManufacturerId" class="control-label"></label>
              <select asp-for="ManufacturerId" class="form-select form-select-xs mb-3" style="width:84%">
                      <option selected>Select manufacturer</option>
                      @foreach(var item in Model.ManufacturersList){
                        <option value="@item.ManufacturerId">@item.ManufacturerName</option>
                      }
                  </select>
              <span asp-validation-for="ManufacturerId" class="text-danger"></span>
            </div>
          </div>
          <div class="modal-footer" style="padding: 0.2rem;">
            <button type="button" ty class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Save changes</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>