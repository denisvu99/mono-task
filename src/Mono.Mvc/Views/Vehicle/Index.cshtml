@using Mono.Contracts.Models;
@model VehicleModelsExtendedVM

<div>
    <div style="display: flex; align-items-center">
        <button type="button" class="btn btn-primary" style="margin-right: 1.5em; white-space: nowrap" data-bs-toggle="modal" data-bs-target="#createVehicleModelModal">
            Create New
        </button>
        <select class="form-select form-select-xs" style="width: 25%; margin-right: 1.5em">
            <option selected>Select manufacturer</option>
                    @foreach(var item in Model.Manufacturers){
                        <option value="@item.VehicleMakeId">@item.ManufacturerName</option>
                    }
        </select>
        <input class="form-control" name="search" placeholder="Search" onchange=""/>
    </div>
    <div class="row">
        @if (Model == null){
            <p>No car models found</p>
        }else{
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Model <a class="btn"><i class="fa-solid fa-arrow-up"></i></a></th>
                        <th>Manufacturer <a class="btn"><i class="fa-solid fa-arrow-up"></i></a></th>
                        <th style="width: 20%; white-space: nowrap">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (VehicleModelVM car in Model.VehicleModels)
                    {
                        <tr>
                            <td>
                                @car.ModelId
                            </td>
                            <td>
                                @car.ModelName
                            </td>
                            <td>
                                @car.ManufacturerName
                            </td>
                            <td>
                                <div class="flex-se">
                                    <form method="post" asp-controller="Vehicle" asp-action="VehicleModel" asp-route-id="@car.ModelId">
                                        <button type="submit" class="btn btn-primary update-model-btn">
                                            <i class="fa-solid fa-gear" style="color: #ffffff;"></i>
                                        </button>
                                    </form>
                                    <form method="post" asp-controller="Vehicle" asp-action="DeleteModel" asp-route-id="@car.ModelId">
                                        <button type="submit" class="btn btn-danger"><i class="fa-regular fa-trash-can"></i></button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

@await Html.PartialAsync("_CreateVehicleModelModal", new CreateVehicleModelVM(){ManufacturersList = Model.Manufacturers})